{
  "name": "node-middleware",
  "script": "./bin/www",
  "ignoreWatch": [
    "node_modules"
  ],
  "instances": 2,
  "exec_mode": "cluster",
  "env": {
    "NODE_ENV": "development",
    "PORT": 4000
  },
  "env_production": {
    "NODE_ENV": "production",
    "PORT": 4000
  },
  "env_test": {
    "NODE_ENV": "test",
    "PORT": 4000
  },
  "env_uat": {
    "NODE_ENV": "uat",
    "PORT": 4000
  },

  "error_file": "logs/pm2/err.log",
  "out_file": "logs/pm2/out.log",
  "pid_file": "logs/pm2/pid.log",
  "merge_logs": true,
  "log_date_format": "YYYY-MM-DD hh:mm:ss",
  "watch": false,
  "time": true
}